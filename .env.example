# GPT Researcher Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key (required for embeddings, optional for LLM if not using OpenRouter)
OPENAI_API_KEY=your_openai_api_key_here

# Tavily Search API Key (required for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# Document path for local research
DOC_PATH=./my-docs

# OpenRouter API Key (optional, for using OpenRouter as LLM provider)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter LLM Configuration (examples)
# FAST_LLM=openrouter:anthropic/claude-3.5-haiku
# SMART_LLM=openrouter:anthropic/claude-sonnet-4
# STRATEGIC_LLM=openrouter:anthropic/claude-opus-4.1

# Alternative LLM Configuration (examples)
# FAST_LLM=openai:gpt-4o-mini
# SMART_LLM=openai:gpt-4o
# STRATEGIC_LLM=openai:o1-mini

# Embedding Configuration
# For OpenAI embeddings:
EMBEDDING=openai:text-embedding-3-small
# For HuggingFace embeddings:
# EMBEDDING=huggingface:sentence-transformers/all-MiniLM-L6-v2

# Optional: Rate limiting for OpenRouter (requests per second)
# OPENROUTER_LIMIT_RPS=2.0

# NEXT_PUBLIC_GPTR_API_URL=http://0.0.0.0:8000  # Defaults to localhost:8000 if not set